<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.szumusic.szumusicapp.ui.base.HomeFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <com.youth.banner.Banner
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                app:indicator_margin="5dp"
                app:indicator_height="7dp"
                app:indicator_width="7dp"
                app:indicator_drawable_selected="@drawable/indicator_shape"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                >
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/user_avatar"
                    />
                <ImageView
                    android:id="@+id/local_music"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/music_player"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/like"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/heat_rank"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的歌单"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="本地音乐"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的点赞"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="热歌排行"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:layout_marginTop="4dp"
                >
                <View
                    android:layout_width="3dp"
                    android:layout_height="30dp"
                    android:background="@color/colorPrimary"
                    >
                </View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="新歌速递"
                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"

                    android:gravity="center_vertical"
                    android:text="更多>>"
                    android:textSize="12dp"
                    android:textColor="#4e4e4e"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                >

            </android.support.v7.widget.RecyclerView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:layout_marginTop="4dp"
                >
                <View
                    android:layout_width="3dp"
                    android:layout_height="30dp"
                    android:background="@color/colorPrimary"

                    >

                </View>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="热门歌曲"
                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"

                    android:gravity="center_vertical"
                    android:text="更多>>"
                    android:textSize="12dp"
                    android:textColor="#4e4e4e"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
