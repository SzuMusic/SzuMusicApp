<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     android:padding="10dp"
    android:id="@+id/content_layout"
    >

    <ImageView
        android:id="@+id/song_cover"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/songsheet03"
        android:background="#bbb"
        />

    <ImageView
        android:id="@+id/icon_radio"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_listen"
        android:layout_marginRight="-20dp"
        android:layout_toLeftOf="@+id/song_cover"
        android:layout_below="@+id/song_cover"
        android:layout_marginTop="-120dp"
        />
    <TextView
        android:id="@+id/listen_count"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textColor="@color/white"
        android:text="100"
        android:layout_toRightOf="@+id/icon_radio"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/song_cover"
        android:layout_marginTop="-120dp"
        android:paddingTop="3dp"
        />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="告白气球"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_below="@+id/song_cover"
        android:layout_marginTop="5dp"
        android:textColor="#020204"
        android:maxEms="10"
        />
    <TextView
        android:id="@+id/tv_singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="周杰伦"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="2dp"
        android:textColor="#808080"
        android:maxEms="7"
        />

</RelativeLayout>