<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请给出您的评分"
        android:gravity="center"
        android:textColor="#333"
        />
    <com.hsalf.smilerating.SmileRating
        android:id="@+id/smile_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        app:angryColor="#f29a68"
        app:drawingColor="#353431"
        app:normalColor="#f2dd68"
        app:isIndicator="false"
        app:placeHolderBackgroundColor="#e6e8ed"
        app:placeHolderSmileColor="#ffffff"
        app:textNonSelectionColor="#AEB3B5"
        app:textSelectionColor="#000000"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="请选择你的评分"
        />

    <Button
        android:id="@+id/btn_love"
        android:layout_width="fill_parent"
        android:layout_height="42dip"
        android:gravity="center"
        android:text="非常好听"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:background="@drawable/btn_home_mark"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/btn_like"
        android:layout_width="fill_parent"
        android:layout_height="42dip"
        android:layout_marginTop="8dp"
        android:background="@drawable/btn_home_mark"
        android:gravity="center"
        android:text="好听"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/btn_normal"
        android:layout_width="fill_parent"
        android:layout_height="42dip"
        android:gravity="center"
        android:text="一般般"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:background="@drawable/btn_home_mark_normal"
        android:visibility="gone"
        />
    <Button
        android:id="@+id/btn_dislike"
        android:layout_width="fill_parent"
        android:layout_height="42dip"
        android:gravity="center"
        android:text="不好听"
        android:textColor="#ffffff"
        android:background="@drawable/btn_home_mark_dislike"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        />
    <Button
        android:id="@+id/btn_hate"
        android:layout_width="fill_parent"
        android:layout_height="42dip"
        android:gravity="center"
        android:text="很难听"
        android:textColor="#ffffff"
        android:background="@drawable/btn_home_mark_dislike"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        />

</LinearLayout>